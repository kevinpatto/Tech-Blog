{{#each posts as |post|}}
<div class="card col-10 col-md-8 align-self-center my-2">
	<div class="card-header">
		<a href="/post/{{post.id}}">{{post.title}}</a>
	</div>
	<div class="card-body">
		<p class="card-text">{{post.content}}</p>
	</div>
	<div class="card-footer text-body-secondary">
		{{post.date_created}}
	</div>
</div>
{{/each}}